<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/main1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:background="@color/TopColor2"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size120"
                    android:background="@color/base"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size15"
                    android:paddingTop="@dimen/size25"
                    android:paddingRight="@dimen/size15"
                    android:paddingBottom="@dimen/size25">

                    <LinearLayout
                        android:layout_width="@dimen/size60"
                        android:layout_height="@dimen/size60"
                        android:background="@drawable/dt_icon_white"
                        android:orientation="horizontal"></LinearLayout>

                    <TextView
                        android:id="@+id/textView_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size15"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/size25" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size15"
                    android:paddingTop="@dimen/size20"
                    android:paddingRight="@dimen/size15"
                    android:paddingBottom="@dimen/size20">

                    <LinearLayout
                        android:id="@+id/layout_b1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_view_white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="@dimen/size50"
                            android:layout_height="@dimen/size50"
                            android:background="@drawable/order05"
                            android:orientation="horizontal"></LinearLayout>

                        <TextView
                            android:id="@+id/textView41"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size10"
                            android:gravity="center"
                            android:text="상점정보"
                            android:textColor="@color/base7"
                            android:textSize="@dimen/size18" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_b2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_view_white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="@dimen/size50"
                            android:layout_height="@dimen/size50"
                            android:background="@drawable/operation1"
                            android:orientation="horizontal"></LinearLayout>

                        <TextView
                            android:id="@+id/textView42"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size10"
                            android:gravity="center"
                            android:text="배달정보"
                            android:textColor="@color/base7"
                            android:textSize="@dimen/size18" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_b3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_view_white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="@dimen/size50"
                            android:layout_height="@dimen/size50"
                            android:background="@drawable/msg01"
                            android:orientation="horizontal"></LinearLayout>

                        <TextView
                            android:id="@+id/textView43"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size10"
                            android:gravity="center"
                            android:text="메세지"
                            android:textColor="@color/base7"
                            android:textSize="@dimen/size18" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size10"
                    android:background="@color/base14"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size13"
                    android:paddingRight="@dimen/size10">

                    <LinearLayout
                        android:id="@+id/layout_b4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_view_base14"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/size15"
                        android:paddingBottom="@dimen/size15">

                        <LinearLayout
                            android:layout_width="@dimen/size18"
                            android:layout_height="@dimen/size18"
                            android:background="@drawable/pay50"
                            android:orientation="horizontal"></LinearLayout>

                        <TextView
                            android:id="@+id/textView51"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/size2"
                            android:text="적립금내역"
                            android:textSize="@dimen/size13" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_b5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_view_base14"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/size15"
                        android:paddingBottom="@dimen/size15">

                        <LinearLayout
                            android:layout_width="@dimen/size18"
                            android:layout_height="@dimen/size18"
                            android:background="@drawable/netpay_send50"
                            android:orientation="horizontal"></LinearLayout>

                        <TextView
                            android:id="@+id/textView52"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/size2"
                            android:text="카드결제"
                            android:textSize="@dimen/size13" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_b6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_view_base14"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/size5"
                        android:paddingTop="@dimen/size15"
                        android:paddingBottom="@dimen/size15">

                        <LinearLayout
                            android:layout_width="@dimen/size18"
                            android:layout_height="@dimen/size18"
                            android:background="@drawable/set60"
                            android:orientation="horizontal"></LinearLayout>

                        <TextView
                            android:id="@+id/textView53"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/size2"
                            android:text="환경설정"
                            android:textSize="@dimen/size13" />

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    android:visibility="gone"
                    app:tabIndicatorColor="@color/base"
                    app:tabRippleColor="@color/base7"
                    app:tabSelectedTextColor="@color/base"
                    app:tabTextAppearance="@style/tab_text"
                    app:tabTextColor="@color/base7" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                </androidx.viewpager.widget.ViewPager>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_exit"
                    android:layout_width="@dimen/size200"
                    android:layout_height="@dimen/size40"
                    android:layout_marginTop="@dimen/size10"
                    android:layout_marginBottom="@dimen/size10"
                    android:background="@drawable/btn3"
                    android:text="업무 종료"
                    android:textColor="@color/base"
                    android:textSize="@dimen/size20" />
            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
